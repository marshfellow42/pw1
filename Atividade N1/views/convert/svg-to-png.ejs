<%- include('../partials/header') %>

<link rel="stylesheet" href="/stylesheets/svg-to-png.css" />

<div class="container-fluid vh-100">
  <%- include('../partials/topbar') %>

  <div class="row h-100">
    <!-- Sidebar (3 columns) -->
    <%- include('../partials/sidebar') %>

    <!-- Main Content -->
    <div class="col-md-9 d-flex flex-column">
      <!-- Voltar Button (Fixed at Top-Left) -->
      <div class="voltar-container">
        <a href="/" style="text-decoration: none; color: gray; font-size: 18px">
          <i class="bi bi-arrow-left"></i> Voltar
        </a>
      </div>

      <!-- Centered Content -->
      <div class="center-content">
        <!-- Drag-and-drop area -->
        <div id="dragArea" class="border rounded p-4">
          <p>Arraste o seu arquivo SVG para aqui</p>
          <input type="file" id="fileInput" class="d-none" accept=".svg" />
          <button id="uploadBtn" class="btn btn-primary">
            Selecione o SVG
          </button>
        </div>

        <!-- Preview Section -->
        <div id="previewContainer" class="mt-3">
          <h3>Preview do SVG:</h3>
          <div id="svgPreview"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/svg-to-png.js"></script>

<%- include('../partials/footer') %>
